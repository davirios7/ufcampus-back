{
  "compilerOptions": {
    "target": "ES2023",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "outDir": "build"
  },
  "exclude": ["node_modules/"],
  "include": ["src/**/*.ts"]
}
